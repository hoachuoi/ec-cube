{% extends '@admin/default_frame.twig' %}

{% set menus = ['holiday', 'holiday_create'] %}
{% block title %}
    PluginHoliday - {{ holiday.id ? '編集日祝' : '追加日祝' }}
{% endblock %}
{% block sub_title %}プラグイン一覧{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}{% endblock stylesheet %}

{% block javascript %}
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
{% endblock javascript %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ holiday.id ? '日祝編集' : '日祝追加' }}</span></div>
                        <div class="card-body">
                            {% if holiday.id %}
                                <div class="row">
                                <div class="col-3">
                                    <span>ID</span>
                                    <span class="badge bg-primary ml-1">{{ 'admin.common.required'| trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    <p>{{ holiday.id }}</p>
                                </div>
                            </div>
                            {% endif %}
                            <!-- Trường Name -->
                            <div class="row">
                                <div class="col-3">
                                    <span>{{'plugin_holiday.admin.name'| trans}}</span>
                                    <span class="badge bg-primary ml-1">{{ 'admin.common.required'| trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>

                            <!-- Trường Holiday Message -->
                            <div class="row">
                                <div class="col-3">
                                    <span>{{'plugin_holiday.admin.message'| trans}}</span>
                                    <span class="badge bg-primary ml-1">{{ 'admin.common.required'| trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.holiday_message) }}
                                    {{ form_errors(form.holiday_message) }}
                                </div>
                            </div>

                            <!-- Trường Holiday Date -->
                            <div class="row">
                                <div class="col-3">
                                    <span>{{'plugin_holiday.admin.date'| trans}}</span>
                                    <span class="badge bg-primary ml-1">{{ 'admin.common.required'| trans }}</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.holiday_date) }}
                                    {{ form_errors(form.holiday_date) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nút điều hướng và Submit -->
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="javascript:history.back()">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>プラグイン一覧</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">
                                    {{ holiday.id ? '更新' : '登録' }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}